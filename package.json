{
  "name": "claude-code-chat-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "dependencies": {
    "fastify": "^4.x",
    "@fastify/cors": "^9.x"
  },
  "devDependencies": {
    "typescript": "^5.x",
    "@types/node": "^20.x",
    "ts-node": "^10.x",
    "nodemon": "^3.x",
    "eslint": "^8.x",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "prettier": "^3.x",
    "eslint-config-prettier": "^9.x",
    "eslint-plugin-prettier": "^5.x",
    "husky": "^8.x",
    "lint-staged": "^15.x"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:build": "tsc --watch",
    "start:bg": "npm run build && nohup node dist/server.js > server.log 2>&1 & echo $! > server.pid",
    "stop": "kill $(cat server.pid) && rm server.pid",
    "status": "ps -p $(cat server.pid) > /dev/null 2>&1 && echo 'Server is running (PID: '$(cat server.pid)')' || echo 'Server is not running'",
    "logs": "tail -f server.log",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}